<h3 class='text-primary'>
  &emsp;
  Calendario Assenze - Settimanale
</h3>
<hr class='hr-primary'/>
<%= week_calendar(number_of_weeks: 1, events: @absences) do |date, absences| %>
  <% if date.wday == 0 || date.wday == 6 %>
  <% else %>
    <div class='card bg-light mb-3 shadow'>
      <div class='card-body'>
        <div class='card-header text-center'>
          <strong>
            <span class='text-secondary'>
              <i class='fas fa-calendar-day'></i>
              <%= l(date, format: '%b') %>
            </span>
            &emsp;
            <%= l(date, format: '%A %d') %>
          </strong>
        </div>
        <% absences.each do |absence| %>
          <div class='card border-<%= absence_type?(absence) %> mb-3'>
            <div class='card-body'>
              <i class='fas fa-user-circle'></i>
              &nbsp;
              <%= absence.user.last_name %>&nbsp;<%= absence.user.first_name %>
              <br/>
              <strong class='text-<%= absence_type?(absence) %>'>
                <%= absence.absence_type.name %>
              </strong>
              <br/>
              <i class='far fa-clock'></i>&nbsp;
              dalle:&nbsp;<%= l(absence.start_time, format: '%H:%M') %>
              <br/>
              <i class='far fa-clock'></i>&nbsp;
              alle:&nbsp;<%= l(absence.end_time, format: '%H:%M') %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
